{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Задание</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Дата создания</th>
                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Дата окончания</th>
                <td>{{ task.expiredAt ? task.expiredAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Исполнитель</th>
                <td>{{ task.executor }}</td>
            </tr>
        </tbody>
    </table>

    <div class="my-2">
        <a class="btn btn-dark" href="{{ path('app_index') }}">Назад</a>

        <a class="btn btn-dark" href="{{ path('app_task_edit', {'id': task.id}) }}">Изменить</a>
    </div>

    {{ include('ttt/_delete_form.html.twig') }}
{% endblock %}
