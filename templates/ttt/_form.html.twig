{{ form_start(form) }}
    <div class="d-flex">
        <p>
            Имя:
        </p> {{ form_widget(form.name) }}
    </div>
    <div class="d-flex">
        <p>
            Описание:
        </p> {{ form_widget(form.description) }}
    </div>
    <div class="d-flex">
        <p>
            Дата окончания:
        </p> {{ form_widget(form.expired_at) }}
    </div>
    <div class="d-flex">
        <p>
            Исполнитель:
        </p> {{ form_widget(form.executor) }}
    </div>
    <button class="btn btn-dark">{{ button_label|default('Сохранить') }}</button>
{{ form_end(form) }}
